            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgThumnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>
            <!--android:src="@drawable/molyka"-->

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_alignBottom="@+id/imgThumnail"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:background="@android:drawable/screen_background_dark_transparent"

                android:text="What's new in Android Studio 2.0?" />

            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Google just released a newer version of Android named Lollipop..."
                android:layout_below="@+id/imgThumnail"
                android:layout_above="@id/textViewDate"
                android:padding="5dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewDate"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal|start"
                android:textStyle="italic"
                android:text="19/11/2015"/>

            <Button
                android:id="@+id/btnShare"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/textViewDate"
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:layout_alignBaseline="@id/textViewDate"
                android:background="@android:color/transparent"
                android:textColor="#FF0B259E"
                android:text="SHARE"/>

